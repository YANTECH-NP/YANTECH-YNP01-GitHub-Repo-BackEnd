{
  "family": "notification-platform-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "notification-platform-backend",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/notification-platform-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "hostPort": 8001,
          "protocol": "tcp"
        }
      ],
      "environment": [  
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "APPLICATIONS_TABLE",
          "value": "YANTECH-YNP01-AWS-DYNAMODB-APPLICATIONS-DEV"
        },
        {
          "name": "API_KEYS_TABLE",
          "value": "YANTECH-YNP01-AWS-DYNAMODB-API-KEYS-DEV"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "https://yantech-ynp456-frontend-dolphin.s3.amazonaws.com"
        },
        {
          "name": "APP_PORT",
          "value": "8001"
        },
        {
          "name": "APP_HOST",
          "value": "0.0.0.0"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/notification-platform",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8001/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

